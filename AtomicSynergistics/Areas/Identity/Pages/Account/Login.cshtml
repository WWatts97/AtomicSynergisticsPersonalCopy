@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<!-- start loader -->
   <div id="pageloader-overlay" class="visible incoming"><div class="loader-wrapper-outer"><div class="loader-wrapper-inner" ><div class="loader"></div></div></div></div>
   <!-- end loader -->

<!-- Start wrapper-->
 <div id="wrapper">

 <div class="loader-wrapper"><div class="lds-ring"><div></div><div></div><div></div><div></div></div></div>
    <div class="loader-wrapper"><div class="lds-ring"><div></div><div></div><div></div><div></div></div></div>
    <div class="card card-authentication1 mx-auto my-5">
        <div class="card-body">
            <div class="card-content p-2">
                <div class="text-center">
                    <img class="img-thumbnail" src="~/assets/images/Atomic_Synergistics (1).png" alt="logo icon">
                </div>
                <div class="card-title text-uppercase text-center pt-3 pb-1"><h4>Sign In</h4></div>
                <form id="account" method="post">
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <div class="position-relative has-icon-right">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                            <div class="form-control-position">
                                <i class="icon-user"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <div class="position-relative has-icon-right">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <div class="form-control-position">
                                <i class="icon-lock"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <div class="icheck-material-white">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group col-6 text-right">
                            <a id="forgot-password" asp-page="./ForgotPassword">Reset Password</a>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-light btn-block">Log in</button>
                    </div>

                </form>
            </div>
        </div>
        <div class="card-footer text-center py-3">
            <p class="text-warning mb-0">Do not have an account?                     <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
            </p>
        </div>
    </div>
</div>




@*</div>*@

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
