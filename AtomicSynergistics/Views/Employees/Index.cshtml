@model IEnumerable<AtomicSynergisitcs.DATA.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h1 class="text-center mb-2 d-flex">Employees</h1>

<p class="d-flex">
    <a class="btn btn-outline-info" asp-action="Create">Add New Employee</a>
</p>
<table class="table table-hover table-bordered bg-dark-light1">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.HireDate)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.TerminationDate)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.CountryId)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    <a asp-action="Details" asp-route-id="@item.EmployeeId">@Html.DisplayFor(modelItem => item.FirstName)</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EmployeeId">@Html.DisplayFor(modelItem => item.LastName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TerminationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.CountryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager.FirstName)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> 
                    @if (User.IsInRole("Admin"))
                    {

                        <a asp-action="Delete" asp-route-id="@item.EmployeeId"> | Delete</a>

                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>

    <script src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
    <script>
        $('.table').dataTable({

            dom: 'lBfrtip',
            buttons: [
                {
                    extend: 'excelHtml5',
                    title: 'Excel',
                    text: 'Export to excel',
                    className: 'btn'
                },
                {
                    extend: 'pdfHtml5',
                    title: 'PDF',
                    text: 'Export to PDF',
                    className: 'btn'
                }
            ]
        });
    </script>
    <script>
        $('.dt-buttons').addClass('ml-3').addClass('mb-1');
    </script>
}
