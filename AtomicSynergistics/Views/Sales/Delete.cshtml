@model AtomicSynergisitcs.DATA.Models.Sale

@{
    ViewData["Title"] = "Delete | Sale #" + Model.SaleId;
}



<h3>Are you sure you want to delete Sale #@Model.SaleId?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SaleDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaleDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SaleTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaleTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.BillingAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salesperson)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salesperson.FirstName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SaleId" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a asp-action="Index">Back to Sales</a>
    </form>
</div>
