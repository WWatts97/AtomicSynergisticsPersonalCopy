@model AtomicSynergisitcs.DATA.Models.Sale

@{
    ViewData["Title"] = "Edit | Sale #" + Model.SaleId;
}

<hr />
<div class="row align-items-center">
    <div class="col-md-4 offset-4">
        <h1>Edit Sale #@Model.SaleId</h1>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SaleId" />
            <div class="form-group">
                <label asp-for="SaleDate" class="control-label"></label>
                <input asp-for="SaleDate" class="form-control" />
                <span asp-validation-for="SaleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalespersonId" class="control-label"></label>
                <select asp-for="SalespersonId" class="form-control" asp-items="ViewBag.SalespersonId"></select>
                <span asp-validation-for="SalespersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleTotal" class="control-label"></label>
                <input asp-for="SaleTotal" class="form-control" />
                <span asp-validation-for="SaleTotal" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
