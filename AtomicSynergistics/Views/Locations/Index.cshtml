@model IEnumerable<AtomicSynergisitcs.DATA.Models.Location>

@{
    ViewData["Title"] = "Locations";
}

<h1 class="text-center mb-2 d-flex">Locations</h1>

<p class="d-flex">
        <a class="btn btn-outline-info" asp-action="Create">Add New Location</a>
</p>
<table class="table table-hover table-bordered bg-dark-light1">
    <thead>
        <tr>
            <th class="text-center">
               Location Name
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.LocationAddress)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.LocationCity)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.LocationState)
            </th>
            <th class="text-center" >
                @Html.DisplayNameFor(model => model.LocationPostalCode)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 <a asp-action="Details" asp-route-id="@item.LocationId"> @Html.DisplayFor(modelItem => item.LocationName)</a>
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationAddress)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationPostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.LocationId">Edit</a> 
                @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.LocationId">| Delete</a>
                        
                    }
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $('.table').dataTable();
    </script>
    
}