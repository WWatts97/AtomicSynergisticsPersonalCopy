@model IEnumerable<AtomicSynergisitcs.DATA.Models.ProductType>

@{
    ViewData["Title"] = "Product Types";
}

<h1 class="text-center mb-2 d-flex">Product Types</h1>

<p class="d-flex">
    <a class="btn btn-outline-info" asp-action="Create">Add New Product Type</a>
</p>
<table class="table table-hover table-bordered bg-dark-light1">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ProductTypeName)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTypeName)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.ProductTypeId">Edit</a> 
                @if (User.IsInRole("Admin"))
                    {
                        
                        <a asp-action="Delete" asp-route-id="@item.ProductTypeId">| Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>
        $('.table').dataTable();
    </script>
}